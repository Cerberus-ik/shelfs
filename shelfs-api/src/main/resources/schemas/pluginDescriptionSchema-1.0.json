{
  "$id": "http://example.com/example.json",
  "type": "object",
  "properties": {
    "author": {
      "$id": "/properties/author",
      "type": "string",
      "title": "The Author Schema ",
      "description": "The name of the author",
      "default": "Unknown-Author",
      "examples": [
        "Cerberus"
      ]
    },
    "name": {
      "$id": "/properties/name",
      "type": "string",
      "title": "The Name Schema ",
      "description": "The name of the plugin",
      "default": "Unknown-Plugin",
      "examples": [
        "Test Plugin"
      ]
    },
    "version": {
      "$id": "/properties/version",
      "type": "string",
      "title": "The Version Schema ",
      "description": "The version of the plugin",
      "default": "1.0.0",
      "examples": [
        "0.1.0"
      ]
    },
    "main": {
      "$id": "/properties/main",
      "type": "string",
      "title": "The Main Schema ",
      "description": "The path to the main class inside the plugin jar",
      "default": "Main",
      "examples": [
        "de.treona.testPlugin.Main"
      ]
    },
    "dependencies": {
      "$id": "/properties/dependencies",
      "type": "array",
      "items": {
        "$id": "/properties/dependencies/items",
        "type": "string",
        "title": "The dependencies Schema ",
        "description": "Contains an array with all the plugin names this plugin depends on",
        "examples": [
          "test",
          "test2"
        ]
      }
    }
  },
  "required": [
    "author",
    "name",
    "version",
    "main"
  ]
}